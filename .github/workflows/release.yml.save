name: release

on:
  push:
    tags:
      - "v*"

permissions:
  contents: write

jobs:
  build-aarch64:
    name: Build ARM64 (aarch64-unknown-linux-gnu)
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install cross toolchain
        run: |
          sudo apt-get update
          sudo apt-get install -y gcc-aarch64-linux-gnu g++-aarch64-linux-gnu pkg-config

      - name: Install Rust stable + target
        uses: dtolnay/rust-toolchain@stable
        with:
          targets: aarch64-unknown-linux-gnu

      - name: Build (release) mash-installer for ARM64
        working-directory: mash-installer
        env:
          CC_aarch64_unknown_linux_gnu: aarch64-linux-gnu-gcc
          CXX_aarch64_unknown_linux_gnu: aarch64-linux-gnu-g++
          CARGO_TARGET_AARCH64_UNKNOWN_LINUX_GNU_LINKER: aarch64-linux-gnu-gcc
          RUSTFLAGS: "-C target-cpu=cortex-a72"
        run: |
          cargo build --release --target aarch64-unknown-linux-gnu

      - name: Package
        run: |
          mkdir -p dist
          cp mash-installer/target/aarch64-unknown-linux-gnu/release/mash-installer dist/

          # Versioned
          (cd dist && tar -czf mash-installer-${{ github.ref_name }}-linux-aarch64.tar.gz mash-installer)
          (cd dist && sha256sum mash-installer-${{ github.ref_name }}-linux-aarch64.tar.gz > mash-installer-${{ github.ref_name }}-linux-aarch64.tar.gz.sha256)

          # Stable "latest" filename (lives inside the SAME release)
          (cd dist && cp mash-installer-${{ github.ref_name }}-linux-aarch64.tar.gz mash-installer-latest-linux-aarch64.tar.gz)
          (cd dist && sha2
